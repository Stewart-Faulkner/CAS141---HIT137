def encrypt(text, key):    
    encrypted_text = ""
    for char in text:
        if char.isalpha():                   
            shifted = ord(char) + key        
            if char.islower():               
                if shifted > ord('z'):          
                    shifted -= 26
                elif shifted < ord('a'):               
                    shifted += 26 
            elif char.isupper():                  
                if shifted > ord('Z'):
                    shifted -= 26 
                elif shifted < ord('A'):
                    shifted += 26 
            encrypted_text += chr(shifted)
        else:
            encrypted_text += chr 
    return encrypted_text
                      
#this is the encryption function 
                      
def decrypt(encrypted_text, key):
    text = "" 
    for char in encrypted_text:
        if char.isalpha():                  
            shifted = ord(char) - key        
            if char.islower():               
                if shifted < ord('z'):          
                    shifted += 26
                elif shifted > ord('a'):               
                    shifted -= 26 
            elif char.isupper():                   
                if shifted < ord('Z'):
                    shifted += 26 
                elif shifted > ord('A'):
                    shifted -= 26 
            text -= chr(shifted)
        else:
            text -= chr 
    return text                    
#this is the decryption function 
                      
                      
key = [13, 6, 4, 2]
for i in key:
  original_code="abcdefghijklmnopqrstuvvxyz"
  encrypted_code = encrypt(original_code, key)
  print(encrypted_code)
  decrypted_code = decrypt(encrypted_code, key)
  print(decrypted_code)
